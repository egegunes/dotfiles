alias rm="rm -Iv --preserve-root"
alias mv="mv -vi"
alias cp="cp -vi"
alias ln="ln -vi"
alias mkdir="mkdir -p"

alias du='du -kh'
alias df='df -kTh'

alias gpg="gpg2"
alias i="inbox.sh editor"

alias clip="xclip -i -selection clipboard"
alias teec="tee >(xclip -i -selection clipboard)"

if [ -f ~/.local_aliases ]; then
    source ~/.local_aliases
fi

alias venv="source ./venv/bin/activate"
